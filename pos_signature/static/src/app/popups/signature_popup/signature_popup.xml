<templates id="template" xml:space="preserve">
    <t t-name="pos_signature.SignaturePopupWidget">
        <div class="popup popup-confirm">
            <div class="modal-header">
                <h4 class="modal-title title drag-handle">
                    Draw Signature
                </h4>
            </div>
            <main class="modal-body">
                <canvas id='paint' t-ref="wkcanvas" width="478px" height="255px" style='width: 478px;height: 255px;cursor: crosshair;background-color:white;'></canvas>
            </main>   
            <footer class="footer modal-footer">
                <div class="button confirm btn btn-lg btn-primary" t-on-click="click_confirm">
                    Save Signature
                </div>
                <div class="button cancel btn btn-lg btn-secondary" t-on-click="cancel">
                    Cancel
                </div>
                <div class="button cancel btn btn-lg btn-secondary" t-on-click="clear_signature">
                    Clear
                </div>
            </footer> 
        </div>
    </t>
</templates>
